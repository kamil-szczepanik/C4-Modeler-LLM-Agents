@startuml
!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Component.puml
LAYOUT_WITH_LEGEND()

System_Boundary(web_app, "Web Application") {
    Component(api_controller, "API Controller", "Node.js", "Handle incoming HTTP requests, validate request data, format responses.")
    Component(service_layer, "Service Layer", "Node.js", "Implement business logic, coordinate between API Controller and Repository.")
    Component(repository_layer, "Repository Layer", "Node.js", "Interact with the database for CRUD operations.")
    Component(domain_model, "Domain Model", "Node.js", "Define core entities and relationships.")
    Component(middleware, "Middleware", "Node.js", "Handle cross-cutting concerns.")
}

Rel(api_controller, service_layer, "Interacts with", "HTTP")
Rel(service_layer, repository_layer, "Interacts with", "CRUD operations")
Rel(service_layer, domain_model, "Utilizes", "Domain entities")
Rel(api_controller, middleware, "Applies", "Cross-cutting concerns")