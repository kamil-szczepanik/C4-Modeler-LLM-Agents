@startuml
!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Component.puml
LAYOUT_WITH_LEGEND()

System_Boundary(MessageQueue, "Message Queue") {
    Component(MessageProducer, "Message Producer", "Node.js", "Publish messages to the queue upon events (e.g., order placed, user registered).")
    Component(MessageConsumer, "Message Consumer", "Node.js", "Listen for messages from the queue and process them (e.g., send confirmation emails).")
    Component(MessageQueueManager, "Message Queue Manager", "Node.js", "Manage the lifecycle of the message queue.")
    Component(MessageSchemaValidator, "Message Schema Validator", "Node.js", "Validate message structure and content.")
}

Rel(MessageProducer, MessageQueueManager, "Interacts with to send messages.")
Rel(MessageConsumer, MessageQueue, "Listens to and processes messages from.")
Rel(MessageQueueManager, MessageQueue, "Oversees queue management and provides metrics.")
@enduml