@startuml
!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Component.puml
LAYOUT_WITH_LEGEND()

System_Boundary(caching_layer, "Caching Layer") {
    Component(cache_manager, "Cache Manager", "Node.js", "Interface with Redis to store, retrieve, and manage cached data.")
    Component(data_fetcher, "Data Fetcher", "Node.js", "Interact with the database to fetch data when it is not available in the cache.")
    Component(cache_strategy, "Cache Strategy", "Node.js", "Define caching strategies and determine which data should be cached.")
    Component(cache_key_generator, "Cache Key Generator", "Node.js", "Generate unique cache keys based on the data type and parameters.")
    Component(cache_monitor, "Cache Monitor", "Node.js", "Monitor cache performance and provide metrics for analysis and optimization.")
}

Rel(cache_manager, "Redis", "Interacts with", "Redis")
Rel(data_fetcher, cache_manager, "Communicates with to check for cached data before querying the database.")
Rel(cache_strategy, cache_manager, "Utilized by to determine when and what data to cache.")
Rel(cache_key_generator, cache_manager, "Used by to create unique keys for caching.")
Rel(cache_monitor, cache_manager, "Collects metrics from to analyze performance and optimize caching strategies.")

@enduml