@startuml
!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Container.puml
LAYOUT_WITH_LEGEND()

System_Boundary(online_bookstore, "Online Bookstore") {
    Person(customer, "Customer", "Users who browse and purchase books, seeking a seamless shopping experience.")
    Container(web_app, "Web Application", "React.js", "Responsive user interface for customers.")
    Container(backend_api, "Backend API", "Node.js", "Microservices handling business logic.")
    ContainerDb(database, "Database", "MongoDB", "NoSQL database for product, user, and review data.")
    Container(caching_layer, "Caching Layer", "Redis", "Caching layer for frequently accessed data.")
    Container(message_queue, "Message Queue", "AWS SQS", "Message queue for asynchronous tasks.")
    Container(third_party_shipping_api, "Third-Party Shipping API Integration", "Various third-party shipping APIs", "Integration with external shipping services.")
}

Rel(customer, web_app, "Uses", "HTTPS")
Rel(web_app, backend_api, "Communicates via", "HTTPS")
Rel(backend_api, database, "Interacts using", "MongoDB native driver")
Rel(backend_api, caching_layer, "Utilizes", "Redis protocol")
Rel(backend_api, message_queue, "Sends messages to", "HTTPS")
Rel(backend_api, third_party_shipping_api, "Makes calls to", "HTTPS")