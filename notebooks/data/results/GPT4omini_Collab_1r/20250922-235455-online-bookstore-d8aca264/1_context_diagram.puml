@startuml
!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Context.puml
LAYOUT_WITH_LEGEND()

Person(customer, "Customer", "Users who browse and purchase books, seeking a seamless shopping experience.")
System(onlineBookstore, "Online Bookstore", "A scalable, secure, and user-friendly platform for buying and selling books.")
System_Ext(paymentGateway, "Payment Gateway", "Handles payment processing for transactions made by customers.")

Rel(customer, onlineBookstore, "Interacts with to browse products and make purchases.", "HTTPS")
Rel(onlineBookstore, paymentGateway, "Processes payments through.", "HTTPS")

@enduml