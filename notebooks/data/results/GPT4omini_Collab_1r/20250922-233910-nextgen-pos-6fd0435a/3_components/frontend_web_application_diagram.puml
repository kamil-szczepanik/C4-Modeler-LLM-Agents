@startuml
!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Component.puml
LAYOUT_WITH_LEGEND()

System_Boundary(FrontendWebApplication, "Frontend Web Application") {
    Component(UI, "User Interface (UI) Component", "React.js", "Render UI, handle user interactions, display feedback.")
    Component(Controller, "Controller Component", "Node.js", "Intermediary between UI and Service layer, manage state transitions.")
    Component(Service, "Service Component", "Node.js", "Implement business logic, coordinate with Repository.")
    Component(Repository, "Repository Component", "Node.js", "Manage data access and persistence.")
    Component(PaymentGateway, "Payment Gateway Integration Component", "Node.js", "Interface with Stripe Terminal for payments.")
    Component(ReceiptGeneration, "Receipt Generation Component", "Node.js", "Generate and send receipts.")
}

Rel(UI, Controller, "Interacts with", "HTTP")
Rel(Controller, Service, "Receives input from", "HTTP")
Rel(Service, Repository, "Interacts with", "Database")
Rel(Service, PaymentGateway, "Invokes", "HTTP")
Rel(Service, ReceiptGeneration, "Calls", "HTTP")