@startuml
!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Context.puml
LAYOUT_WITH_LEGEND()

Person(cashier, "Cashier", "The user responsible for processing sales transactions, managing payments, and applying promotions during the checkout process.")
System(nextgen_pos, "NextGen Point-of-Sale", "A modern point-of-sale system designed to enhance transaction efficiency, support payment processing, and manage promotions and loyalty programs in retail environments.")
System_Ext(stripe_terminal, "Stripe Terminal", "An external payment processing system that handles secure transactions and ensures compliance with PCI-DSS standards.")
System_Ext(email_service_provider, "Email Service Provider", "An external service (e.g., SendGrid) used for sending email receipts to customers after transactions.")

Rel(cashier, nextgen_pos, "Interacts with the POS system to process sales, manage payments, and apply promotions.", "HTTPS")
Rel(nextgen_pos, stripe_terminal, "Sends payment information securely for processing and receives transaction confirmations.", "HTTPS")
Rel(nextgen_pos, email_service_provider, "Sends email requests for receipt delivery after transaction completion.", "HTTPS")

@enduml