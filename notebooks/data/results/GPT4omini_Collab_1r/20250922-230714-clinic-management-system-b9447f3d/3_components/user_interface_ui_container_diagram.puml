@startuml
!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Component.puml
LAYOUT_WITH_LEGEND()

System_Boundary(ui_container, "User Interface (UI) Container") {
    Component(main_app, "Main Application Component", "React", "Entry point for the application, managing routing and state.")
    Component(auth_component, "Authentication Component", "React", "Handles user authentication, including multi-factor authentication (MFA).")
    Component(patient_registration_component, "Patient Registration Component", "React", "Manages patient registration and demographic data capture.")
    Component(appointment_scheduling_component, "Appointment Scheduling Component", "React", "Facilitates appointment scheduling with resource clash checks.")
    Component(emr_component, "Electronic Medical Record (EMR) Component", "React", "Displays and manages electronic medical records.")
    Component(billing_component, "Billing Component", "React", "Manages billing processes and insurance claim submissions.")
    Component(notification_component, "Notification Component", "React", "Handles notifications and alerts for users.")
    Component(error_handling_component, "Error Handling Component", "React", "Centralizes error handling and user feedback.")
}

Rel(main_app, auth_component, "Communicates with")
Rel(main_app, patient_registration_component, "Communicates with")
Rel(main_app, appointment_scheduling_component, "Communicates with")
Rel(main_app, emr_component, "Communicates with")
Rel(main_app, billing_component, "Communicates with")
Rel(main_app, notification_component, "Communicates with")
Rel(main_app, error_handling_component, "Communicates with")