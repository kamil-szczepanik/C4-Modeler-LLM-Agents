@startuml
!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Component.puml
LAYOUT_WITH_LEGEND()

System_Boundary(calm, "Centralized Logging and Monitoring") {
    Component(loggingService, "Logging Service", "Custom service", "Collect and aggregate logs from all microservices, format logs for consistency, and provide an API for other services to send logs.")
    Component(monitoringService, "Monitoring Service", "Custom service", "Collect performance metrics from microservices, monitor system health, and provide an API for reporting metrics.")
    Component(alertingService, "Alerting Service", "Custom service", "Analyze logs and metrics to detect anomalies, trigger alerts based on thresholds, and integrate with notification systems.")
    Component(dashboardService, "Dashboard Service", "Custom service", "Provide a user interface for visualizing logs and metrics, allowing users to filter and search logs and display performance metrics in real-time.")
}

Rel(loggingService, dashboardService, "Serves as the primary data source for", "HTTP/REST")
Rel(loggingService, alertingService, "Interacts with to analyze logs and trigger alerts", "HTTP/REST")
Rel(monitoringService, dashboardService, "Feeds performance metrics data to", "HTTP/REST")
Rel(alertingService, loggingService, "Subscribes to analyze data", "HTTP/REST")
Rel(alertingService, monitoringService, "Subscribes to analyze data", "HTTP/REST")
Rel(dashboardService, loggingService, "Aggregates data from", "HTTP/REST")
Rel(dashboardService, monitoringService, "Aggregates data from", "HTTP/REST")
@enduml