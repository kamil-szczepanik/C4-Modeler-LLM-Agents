@startuml
!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Component.puml
LAYOUT_WITH_LEGEND()

System_Boundary(PatientManagementMicroservice, "Patient Management Microservice") {
    Component(API_Controller, "API Controller", "Spring Boot", "Handles incoming HTTP requests, validates input data, and delegates processing to the service layer.")
    Component(PatientService, "PatientService", "Spring Boot", "Implements business logic for patient management.")
    Component(PatientRepository, "PatientRepository", "Spring Data JPA", "Abstracts data access logic for patient data.")
    Component(Domain_Model, "Domain Model", "Java", "Defines core entities: Patient.")
    Component(AuthService, "AuthService", "Spring Boot", "Handles authentication and authorization.")
    Component(LoggingService, "LoggingService", "Spring Boot", "Centralized logging for the microservice.")
    Component(MonitoringService, "MonitoringService", "Spring Boot", "Performance monitoring for the microservice.")
}

Rel(API_Controller, PatientService, "Delegates processing to")
Rel(PatientService, PatientRepository, "Interacts with")
Rel(API_Controller, AuthService, "Invokes for authentication")
Rel(PatientService, LoggingService, "Logs actions through")
Rel(PatientService, MonitoringService, "Sends performance metrics to") 
@enduml