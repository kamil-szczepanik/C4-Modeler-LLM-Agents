@startuml
!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Component.puml
LAYOUT_WITH_LEGEND()

System_Boundary(data_retention_service, "Data Retention and Archiving Service") {
    Component(api_controller, "API Controller", "Spring Boot", "Expose RESTful endpoints, handle requests, validate input, return responses.")
    Component(service_layer, "Service Layer", "Spring Boot", "Implement business logic, interact with the repository layer, enforce data retention policies.")
    Component(repository_layer, "Repository Layer", "Spring Boot", "Interface with the database for CRUD operations.")
    Component(domain_model, "Domain Model", "Java", "Define data structures.")
    Component(scheduler, "Scheduler", "Spring Boot", "Manage scheduled tasks for archiving and retention checks.")
}

Rel(api_controller, service_layer, "Interacts with", "HTTP")
Rel(service_layer, repository_layer, "Communicates with", "JDBC")
Rel(scheduler, service_layer, "Triggers methods in", "Scheduler calls")
@enduml