@startuml
!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Context.puml
LAYOUT_WITH_LEGEND()

Person(healthcare_provider, "Healthcare Provider", "Users who access the system to manage patient care, appointments, and medical records.")
Person(administrative_staff, "Administrative Staff", "Users responsible for managing appointments, billing, and patient records.")
System(clinic_management_system, "Clinic Management System", "A robust and secure system designed to manage patient registrations, appointments, electronic medical records, and billing in a healthcare environment.")
System_Ext(external_lab_system, "External Lab System", "An external system that provides lab results and data for integration with the Clinic Management System.")
System_Ext(imaging_system, "Imaging System", "An external system that provides imaging data for integration with the Clinic Management System.")

Rel(healthcare_provider, clinic_management_system, "Accesses patient records and manages appointments.", "HTTPS")
Rel(administrative_staff, clinic_management_system, "Manages billing and appointment scheduling.", "HTTPS")
Rel(clinic_management_system, external_lab_system, "Retrieves lab results and sends data for patient care using HL7 FHIR APIs.", "HL7 FHIR APIs")
Rel(clinic_management_system, imaging_system, "Retrieves imaging data for patient records using HL7 FHIR APIs.", "HL7 FHIR APIs")
@enduml