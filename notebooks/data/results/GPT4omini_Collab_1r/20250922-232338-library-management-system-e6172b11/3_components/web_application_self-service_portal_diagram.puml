@startuml
!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Component.puml
LAYOUT_WITH_LEGEND()

System_Boundary(web_app, "Web Application (Self-Service Portal)") {
    Component(api_controller, "API Controller", "Spring MVC Controller", "Handles incoming HTTP requests from the frontend, validates input data, and returns responses.")
    Component(service_layer, "Service Layer", "Spring Boot Service", "Contains business logic for managing catalogued items and interacts with the repository layer.")
    Component(repository_layer, "Repository Layer", "Spring Data JPA", "Abstracts data access logic and interacts with the PostgreSQL database for CRUD operations.")
    Component(domain_model, "Domain Model", "Java Classes", "Defines core data structures for the application and encapsulates business rules.")
    Component(search_component, "Search Component", "Elasticsearch Client", "Interfaces with Elasticsearch for indexing and searching catalogued items.")
}

Rel(api_controller, service_layer, "Calls methods from", "HTTP")
Rel(service_layer, repository_layer, "Interacts with", "JPA")
Rel(service_layer, search_component, "Utilizes for search operations", "Elasticsearch")
Rel(repository_layer, domain_model, "Works with to persist and retrieve data", "Java")
Rel(search_component, "Elasticsearch", "Communicates with for indexing and querying items", "REST API") 
@enduml