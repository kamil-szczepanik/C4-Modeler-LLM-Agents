@startuml
!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Component.puml
LAYOUT_WITH_LEGEND()

System_Boundary(web_app, "Web Application") {
    Component(api_controller, "API Controller", "Node.js with Express or Spring Boot", "Handle HTTP requests, validate input, route requests, return responses.")
    Component(service_layer, "Service Layer", "Node.js with Express or Spring Boot", "Implement business logic, coordinate between controllers and repositories.")
    Component(repository_layer, "Repository Layer", "Node.js with Express or Spring Boot", "Data access and persistence.")
    Component(domain_model, "Domain Model", "Node.js with Express or Spring Boot", "Represent core entities and relationships.")
    Component(security_component, "Security Component", "Node.js with Express or Spring Boot", "Implement field-level encryption, manage authentication and authorization.")
    Component(audit_logging_component, "Audit Logging Component", "Node.js with Express or Spring Boot", "Maintain immutable logs for critical actions.")
}

Rel(api_controller, service_layer, "Handles requests and invokes business logic.")
Rel(service_layer, repository_layer, "Coordinates data access and persistence.")
Rel(service_layer, security_component, "Utilizes security features for data protection.")
Rel(service_layer, audit_logging_component, "Invokes logging for critical actions.")
Rel(repository_layer, domain_model, "Accesses core entities for data operations.")
@enduml