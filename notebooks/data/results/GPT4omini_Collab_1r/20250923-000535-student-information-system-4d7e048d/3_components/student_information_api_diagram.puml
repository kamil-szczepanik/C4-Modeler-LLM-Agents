@startuml
!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Component.puml
LAYOUT_WITH_LEGEND()

System_Boundary(StudentInformationAPI, "Student Information API") {
    Component(API_Controller, "API Controller", "Node.js with Express", "Handle incoming HTTP requests, validate input data, route requests to appropriate services, and return responses to clients.")
    Component(Service_Layer, "Service Layer", "Node.js", "Implement business logic for managing student records, enrollment, grades, and transcripts.")
    Component(Repository_Layer, "Repository Layer", "Node.js", "Interact with the database to perform CRUD operations.")
    Component(Domain_Model, "Domain Model", "Node.js", "Define key entities such as Student, Course, Enrollment, Grade, and Transcript.")
    Component(Audit_Log_Component, "Audit Log Component", "Node.js", "Maintain immutable logs of grade changes and other critical actions.")
}

Rel(API_Controller, Service_Layer, "Routes requests to appropriate services.")
Rel(Service_Layer, Repository_Layer, "Interacts with the database for CRUD operations.")
Rel(Service_Layer, Domain_Model, "Uses domain entities for business logic.")
Rel(Audit_Log_Component, Service_Layer, "Logs critical actions performed by the service layer.")
@enduml