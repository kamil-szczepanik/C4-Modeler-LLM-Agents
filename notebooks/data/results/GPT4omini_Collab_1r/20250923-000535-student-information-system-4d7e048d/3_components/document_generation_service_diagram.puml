@startuml
!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Component.puml
LAYOUT_WITH_LEGEND()

System_Boundary(DocumentGenerationService, "Document Generation Service") {
    Component(API_Controller, "API Controller", "Node.js with Express or Spring Boot", "Handles incoming requests for document generation, validates input data, and manages response formatting.")
    Component(Document_Service, "Document Service", "Java with Apache PDFBox or Python with ReportLab", "Orchestrates the document generation process and applies business logic for document formatting and generation.")
    Component(Repository, "Repository", "Database Access Layer", "Abstracts data access for student records and grades, providing methods to retrieve and store data.")
    Component(Document_Model, "Document Model", "Document Structure Definition", "Defines the structure of the documents being generated and handles document metadata and content assembly.")
    Component(Audit_Log_Service, "Audit Log Service", "Logging Service", "Maintains immutable logs of document generation requests and changes to ensure compliance with integrity requirements.")
}

Rel(API_Controller, Document_Service, "Interfaces to initiate document generation.")
Rel(Document_Service, Repository, "Interacts to fetch necessary data for document generation.")
Rel(Document_Service, Document_Model, "Uses to create and format the document.")
Rel(Document_Service, Audit_Log_Service, "Logs document generation requests.")
Rel(API_Controller, Audit_Log_Service, "Logs actions related to document generation.")
@enduml