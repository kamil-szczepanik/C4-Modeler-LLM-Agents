@startuml
!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Component.puml
LAYOUT_WITH_LEGEND()

System_Boundary(AppointmentSchedulingService, "Appointment Scheduling Service") {
    Component(API_Controller, "API Controller", "Node.js with Express", "Handle incoming HTTP requests related to appointment scheduling, validate input data, and return appropriate responses.")
    Component(Service_Layer, "Service Layer", "Node.js with Express", "Contains the business logic for appointment scheduling, manages resource clash checks and appointment validations.")
    Component(Repository, "Repository", "Node.js with Express", "Interacts with the database to perform CRUD operations on appointment data.")
    Component(Domain_Model, "Domain Model", "Node.js with Express", "Represents the core data structures and business rules related to appointments.")
    Component(Notification_Service, "Notification Service", "Node.js with Express", "Sends notifications to patients and staff regarding appointment confirmations, reminders, and cancellations.")
}

Rel(API_Controller, Service_Layer, "Interacts with", "HTTP")
Rel(Service_Layer, Repository, "Communicates with", "Database")
Rel(Service_Layer, Domain_Model, "Utilizes", "Business Logic")
Rel(Service_Layer, Notification_Service, "Can be called by", "Notification")