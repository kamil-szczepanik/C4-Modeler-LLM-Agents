@startuml
!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Component.puml
LAYOUT_WITH_LEGEND()

System_Boundary(bis, "Billing and Insurance Service") {
    Component(apiController, "API Controller", "Flask or Spring Boot", "Handle incoming HTTP requests related to billing and insurance, validate input data, route requests to appropriate services, and return responses to clients.")
    Component(billingService, "Billing Service", "Flask or Spring Boot", "Implement business logic for billing operations, manage the lifecycle of billing records and insurance claims, and coordinate with other services to fetch necessary patient data.")
    Component(repository, "Repository", "Flask or Spring Boot", "Interact with the database to perform CRUD operations on billing and insurance data, ensuring data integrity and compliance with retention policies.")
    Component(domainModel, "Domain Model", "Flask or Spring Boot", "Define the core entities and their relationships within the billing context, representing claims, invoices, and payment records.")
    Component(notificationService, "Notification Service", "Flask or Spring Boot", "Handle notifications related to billing events, integrating with external systems for sending notifications.")
}

Rel(apiController, billingService, "Interacts with", "HTTP")
Rel(billingService, repository, "Communicates with", "Database")
Rel(billingService, domainModel, "Utilizes", "Business Logic")
Rel(billingService, notificationService, "May call", "Notification Events")