@startuml
!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Component.puml
LAYOUT_WITH_LEGEND()

System_Boundary(db, "Database") {
    Component(pd, "Patient Database", "PostgreSQL or MySQL", "Store patient demographic information, registration details, and maintain a history of patient interactions.")
    Component(ad, "Appointment Database", "PostgreSQL or MySQL", "Manage appointment scheduling, including resource allocation and conflict resolution.")
    Component(emrd, "Electronic Medical Records (EMR) Database", "PostgreSQL or MySQL", "Store comprehensive medical records for each patient, including visit history, treatment plans, and audit trails.")
    Component(bd, "Billing Database", "PostgreSQL or MySQL", "Handle billing information, insurance claims, and payment records.")
    Component(aud, "Audit Log Database", "PostgreSQL or MySQL", "Maintain an audit trail for compliance with HIPAA and GDPR, tracking access and modifications to sensitive data.")
}

Rel(pd, "Patient Database API", "Interacts with")
Rel(ad, "Appointment Database API", "Interacts with")
Rel(emrd, "EMR Database API", "Interacts with")
Rel(bd, "Billing Database API", "Interacts with")
Rel(aud, "Audit Log Database API", "Interacts with")